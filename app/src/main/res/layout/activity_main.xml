<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B2568DB8"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:text="Kalkulator Bangun Datar"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text=" Inputkan angka pertama: "
            android:textSize="25dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/angka1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text=" Inputkan angka kedua    : "
            android:textSize="25dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/angka2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text=" Output hasil Luas            : "
            android:textSize="25dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/luas"
            android:textSize="25dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text=" Output hasil Keliling        : "
            android:textSize="25dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/keliling"
            android:textSize="25dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/persegi"
        android:onClick="LkPersegi"
        android:layout_width="wrap_content"
        android:text="Hitung persegi"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/segitiga"
        android:onClick="LkSegitiga"
        android:layout_width="wrap_content"
        android:text="Hitung segitiga"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/lingkaran"
        android:onClick = "LkLingkaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Hitung lingkaran" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catatan: Untuk Lingkaran menggunakan inputan angka pertama"
            android:layout_gravity="center"
            android:layout_margin="21dp"
            android:textSize="20dp"/>
    </LinearLayout>
</LinearLayout>